<?xml version="1.0"?>
<launch>

	<arg name="js" default="js0"/>
	<arg name="physical" default="false"/>


	<!-- joy node -->
	<node respawn="true" pkg="joy" type="joy_node" name="joy" >
		<param name="dev" type="string" value="/dev/input/$(arg js)" />
		<param name="deadzone" value="0.12" />
		<param name="autorepeat_rate" value="10"/>
	</node>


	<node pkg="controller_teleop" type="rmc_teleop.py" name="teleop_node"/>

	<!-- If the argument is set to true then launch the odrive control node -->
	<group if="$(arg physical)">
		<node pkg="odrive_control" type="odrive_test.py" name="drivetrain_control"/>
	</group>


</launch>